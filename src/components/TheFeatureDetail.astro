                    </div>
                    <div class="text-2xl md:text-3xl tracking-wide font-semibold dark:text-gray-200">{t('preview.profile.title')}</div>
                    <p class="my-6 md:text-lg font-light text-gray-700 leading-7 tracking-wide dark:text-gray-200">{t('preview.profile.description')}</p>
                    <ul id="target-profile-feat" class="flex flex-col gap-3">
                        {
                            t('preview.profile.feature').split(',')
                            .map((feat: string) => 
                                <li class="inline-flex items-center space-x-2 font-light dark:text-gray-300">
                                    <svg class="w-5 h-5 text-purple-500 dark:text-purple-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="1.5"><path stroke-linejoin="round" d="m8.5 12.5l2 2l5-5"/><path d="M7 3.338A9.954 9.954 0 0 1 12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12c0-1.821.487-3.53 1.338-5"/></g></svg>
                                    <span>{feat}</span>
                                </li>
                            )
                        }
                    </ul>
                </div>
            </div>
            <div class="px-4">
                <div id="target-profile" class="rounded-xl overflow-hidden border border-gray-200 dark:border-slate-700/75 shadow-xl shadow-slate-700/5">
                    <Image class="h-full w-full object-cover object-center dark:hidden" src={profile_light} alt={t('preview.profile.imglight')} />
                    <Image class="h-full w-full object-cover object-center hidden dark:block" src={profile_dark} alt={t('preview.profile.imgdark')} />
                </div>
            </div>
        </div>

