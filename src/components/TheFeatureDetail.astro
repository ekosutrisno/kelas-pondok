---
import home_page from '@/assets/images/home_page.webp';
import home_page_dark from '@/assets/images/home_page_dark.webp';
import bacaan_light from '@/assets/images/bacaan_light.webp';
import bacaan_dark from '@/assets/images/bacaan_dark.webp';
import class_detail_light from '@/assets/images/class_detail_light.webp';
import class_detail_dark from '@/assets/images/class_detail_dark.webp';
import profile_light from '@/assets/images/profile_light.webp';
import profile_dark from '@/assets/images/profile_dark.webp';
import surah_light from '@/assets/images/surah_light.webp';
import surah_dark from '@/assets/images/surah_dark.webp';
import cat_2 from '@/assets/svg/cat_2.svg';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { Image } from "astro:assets";
import Segment from "./Segment.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---
<section class="group bg-[url(/svg/hero-pattern.svg)] dark:bg-[url(/svg/hero-pattern-dark.svg)] bg-center relative py-14">
    <Segment
        title="GAMBAR PREVIEW FITUR"
        subTitle="UI interface yang simple dan moderen" 
        shortDescription="Setiap halaman fitur didesain dengan tampilan yang user friendly dan mudah diingat olehmu"
    />

    <div class="pr-8 hidden md:flex justify-end absolute inset-x-0 overflow-hidden">
        <Image class="h-20 w-20 rotate-12 group-hover:translate-x-0 transition-transform duration-500 translate-x-[150%] object-cover object-center" src={cat_2} alt="Cat Hallo Detail" />
    </div>

    <div class="mt-16 max-w-screen-xl mx-auto space-y-16 md:space-y-32">
        <!-- Beranda -->
        <div class="relative grid gap-4 gap-y-10 md:gap-y-0 grid-cols-1 md:grid-cols-2">
            <div id="trigger-beranda" class="absolute -top-52"></div>
            <div class="px-4">
                <div id="target-beranda" class="rounded-xl overflow-hidden border border-gray-200 dark:border-slate-700/75 shadow-xl shadow-slate-700/5">
                    <Image class="h-full w-full object-cover object-center dark:hidden" src={home_page} alt={t('preview.beranda.imglight')} />
                    <Image class="h-full w-full object-cover object-center hidden dark:block" src={home_page_dark} alt={t('preview.beranda.imgdark')}/>
                </div>
            </div>
            <div class="px-4 col-start-1 md:col-start-2">
                <div class="flex flex-col items-start space-y-4">
                    <div class="w-14 h-14 flex flex-col items-center justify-center rounded-xl border-[1.5px] border-purple-400 bg-purple-100">
                        <svg class="text-purple-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="1.5" d="M15 18H9m12.636-5.042l-.279 1.937c-.487 3.388-.731 5.081-1.906 6.093C18.276 22 16.553 22 13.106 22h-2.212c-3.447 0-5.17 0-6.345-1.012c-1.175-1.012-1.419-2.705-1.906-6.093l-.279-1.937c-.38-2.637-.57-3.956-.029-5.083c.54-1.127 1.691-1.813 3.992-3.183l1.385-.825C9.8 2.622 10.846 2 12 2c1.154 0 2.199.622 4.288 1.867l1.385.825c2.3 1.37 3.451 2.056 3.992 3.183"/></svg>
                    </div>
                    <div class="text-2xl md:text-3xl tracking-wide font-semibold dark:text-gray-200">{t('preview.beranda.title')}</div>
                    <p class="my-6 md:text-lg font-light text-gray-700 leading-7 tracking-wide dark:text-gray-200">{t('preview.beranda.description')}</p>
                    <ul id="target-beranda-feat" class="flex flex-col gap-3">
                        {
                            t('preview.beranda.feature').split(',')
                            .map((feat: string) => 
                                <li class="inline-flex items-center space-x-2 font-light dark:text-gray-300">
                                    <svg class="w-5 h-5 text-purple-500 dark:text-purple-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="1.5"><path stroke-linejoin="round" d="m8.5 12.5l2 2l5-5"/><path d="M7 3.338A9.954 9.954 0 0 1 12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12c0-1.821.487-3.53 1.338-5"/></g></svg>
                                    <span>{feat}</span>
                                </li>
                            )
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Profile -->
        <div class="relative grid gap-4 gap-y-10 md:gap-y-0 grid-cols-1 md:grid-cols-2">
            <div id="trigger-profile" class="absolute -top-52"></div>
            <div class="px-4 row-start-2 md:row-auto">
                <div class="flex flex-col items-start space-y-4">
                    <div class="w-14 h-14 flex flex-col items-center justify-center rounded-xl border-[1.5px] border-blue-400 bg-blue-100">
