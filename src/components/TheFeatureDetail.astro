                        </div>
                    <div class="text-2xl md:text-3xl tracking-wide font-semibold dark:text-gray-200">{t('preview.kelas.title')}</div>
                    <p class="my-6 md:text-lg font-light text-gray-700 leading-7 tracking-wide dark:text-gray-200">{t('preview.kelas.description')}</p>
                    <ul id="target-kelas-feat" class="flex flex-col gap-3">
                        {
                            t('preview.kelas.feature').split(',')
                            .map((feat: string) => 
