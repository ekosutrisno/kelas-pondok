                    </div>
                    <div class="text-2xl md:text-3xl tracking-wide font-semibold dark:text-gray-200">{t('preview.bacaanku.title')}</div>
                    <p class="my-6 md:text-lg font-light text-gray-700 leading-7 tracking-wide dark:text-gray-200">{t('preview.bacaanku.description')}</p>
                    <ul id="target-bacaanku-feat" class="flex flex-col gap-3">
                        {
                            t('preview.bacaanku.feature').split(',')
                            .map((feat: string) => 
                                <li class="inline-flex items-center space-x-2 font-light dark:text-gray-300">
                                    <svg class="w-5 h-5 text-purple-500 dark:text-purple-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="1.5"><path stroke-linejoin="round" d="m8.5 12.5l2 2l5-5"/><path d="M7 3.338A9.954 9.954 0 0 1 12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12c0-1.821.487-3.53 1.338-5"/></g></svg>
                                    <span>{feat}</span>
                                </li>
                            )
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Surat -->
        <div class="relative grid gap-4 gap-y-10 md:gap-y-0 grid-cols-1 md:grid-cols-2">
            <div id="trigger-surat" class="absolute -top-52"></div>
            <div class="px-4 row-start-2 md:row-auto">
                <div class="flex flex-col items-start space-y-4">
                    <div class="w-14 h-14 flex flex-col items-center justify-center rounded-xl border-[1.5px] border-sky-400 bg-sky-100">
                        <svg class="text-sky-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="1.5"><path d="M22 14c0 3.771 0 5.657-1.172 6.828C19.657 22 17.771 22 14 22h-4c-3.771 0-5.657 0-6.828-1.172C2 19.657 2 17.771 2 14c0-3.771 0-5.657 1.172-6.828C3.825 6.518 4.7 6.229 6 6.102m12 0c1.3.127 2.175.416 2.828 1.07c.654.653.943 1.528 1.07 2.828M10 6h4m-3 3h2"/><path d="M14 2.002c1.707.014 2.647.11 3.268.73c.732.732.732 1.91.732 4.267v2.064c0 .46 0 .69-.094.892c-.095.202-.272.35-.626.644l-.72.6M10 2.002c-1.707.014-2.647.11-3.268.73C6 3.464 6 4.642 6 6.999v2.064c0 .46 0 .69.094.892c.095.202.272.35.626.644l1.439 1.2c1.837 1.53 2.755 2.295 3.841 2.295c.65 0 1.239-.273 2-.82"/></g></svg>
                    </div>
                    <div class="text-2xl md:text-3xl tracking-wide font-semibold dark:text-gray-200">{t('preview.surat.title')}</div>
                    <p class="my-6 md:text-lg font-light text-gray-700 leading-7 tracking-wide dark:text-gray-200">{t('preview.surat.description')}</p>
                    <ul id="target-surat-feat" class="flex flex-col gap-3">
                        {
                            t('preview.surat.feature').split(',')
                            .map((feat: string) => 
                                <li class="inline-flex items-center space-x-2 font-light dark:text-gray-300">
                                    <svg class="w-5 h-5 text-purple-500 dark:text-purple-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-width="1.5"><path stroke-linejoin="round" d="m8.5 12.5l2 2l5-5"/><path d="M7 3.338A9.954 9.954 0 0 1 12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12c0-1.821.487-3.53 1.338-5"/></g></svg>
                                    <span>{feat}</span>
                                </li>
                            )
                        }
                    </ul>
                </div>
            </div>
            <div class="px-4">
                <div id="target-surat" class="rounded-xl overflow-hidden border border-gray-200 dark:border-slate-700/75 shadow-xl shadow-slate-700/5">
                    <Image class="h-full w-full object-cover object-center dark:hidden" src={surah_light} alt={t('preview.surat.imglight')} />
                    <Image class="h-full w-full object-cover object-center hidden dark:block" src={surah_dark} alt={t('preview.surat.imgdark')}/>
                </div>
            </div>
        </div>

        <!-- Ruang Kelas -->
        <div class="relative grid gap-4 gap-y-10 md:gap-y-0 grid-cols-1 md:grid-cols-2">
            <div id="trigger-kelas" class="absolute -top-52"></div> 
            <div class="px-4">
                <div id="target-kelas" class="rounded-xl overflow-hidden border border-gray-200 dark:border-slate-700/75 shadow-xl shadow-slate-700/5">
